{
  "name": "jira-desktop-app",
  "version": "2.0.0",
  "description": "Modern Jira Desktop App built with Electron",
  "main": "dist/main/main.js",
  "author": {
    "name": "JoshWay",
    "email": "developer@joshway.com"
  },
  "license": "ISC",
  "homepage": "https://opt.si",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "electron-builder -mwl",
    "clean": "rimraf dist out"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.0"
  },
  "build": {
    "appId": "com.joshway.jira-desktop",
    "productName": "Jira Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"],
          "differentialPackage": false
        }
      ]
    },
    "win": {
      "icon": "resources/icon.ico",
      "publisherName": "JoshWay",
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "category": "Network",
      "maintainer": "JoshWay <developer@joshway.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    }
  }
}